<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- style for the main layout -->
    <style name="style_main">
        <item name="android:background">@color/md_theme_surfaceDim</item>
    </style>

    <!-- style for the topbar -->
    <style name="style_button_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="style_toolbar_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_red_item_menu_more" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/md_theme_error</item>
    </style>

    <!-- style for recycler view -->
    <style name="style_carousel_recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">450dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_carousel_indicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_button_like">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="backgroundTint">@color/md_theme_background</item>
        <item name="android:drawableStart">@drawable/favorite_line</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/indicator_orange</item>

    </style>

    <style name="style_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- style for the slipper info -->
    <style name="style_slipper_info_layout">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_slipper_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="style_slipper_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="style_slipper_state">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="style_link_el_ganso">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textColor">@color/indicator_selected</item>
    </style>

    <style name="style_slipper_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="style_slipper_price_protection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/indicator_selected</item>
    </style>

    <style name="style_icon_tax_protection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <!-- style for seller info -->
    <style name="style_seller_info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
    </style>

    <style name="style_user_image">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="style_user_image_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="style_user_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_rating_bar" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3.5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:scaleX">0.4</item>
        <item name="android:scaleY">0.4</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="style_rated_times">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_xsmall</item>
        <item name="android:textSize">@dimen/text_rated_times</item>
    </style>

    <style name="style_button_frequent_announcements">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="backgroundTint">@color/md_theme_inversePrimary</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:text">@string/string_frequent_announcements</item>
        <item name="android:textSize">@dimen/text_frequent_announcements</item>
    </style>

    <!-- style for description layout -->
    <style name="style_description_container">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
    </style>

    <style name="style_description_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#88000000</item>
        <item name="android:text">@string/string_description_title</item>
    </style>

    <style name="style_description_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:text">@string/string_description_content</item>
    </style>

    <style name="style_expand_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/string_expand_text</item>
        <item name="android:textColor">@color/indicator_selected</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:gravity">start</item>
        <item name="layout_goneMarginTop">@dimen/margin_small</item>
    </style>

    <!-- style for details layout -->
    <style name="style_details_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
    </style>

    <style name="style_distinctive_icon">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:src">@drawable/checkroom</item>
        <item name="android:background">@color/md_theme_inversePrimary</item>
    </style>

    <style name="style_distinctive_icon_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="style_details_closet_star_title">
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/string_star_closet</item>
    </style>

    <style name="style_details_closet_star_description">
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/string_star_closet_description</item>
    </style>

    <!-- style for tax protection layout -->
    <style name="tax_protection_container">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
    </style>

    <style name="style_tax_protection_icon">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:src">@drawable/verified_user</item>
        <item name="android:tint">@color/md_theme_primary</item>
        <item name="android:background">@color/md_theme_inversePrimary</item>
    </style>

    <style name="style_tax_protection_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="style_details_tax_protection_title">
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/string_star_closet</item>
    </style>

    <style name="style_details_tax_protection_description">
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:textSize">@dimen/text_rated_times</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/string_tax_protection_description</item>
    </style>

    <!-- style for delivery layout -->
    <style name="style_delivery_container">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:background">@color/md_theme_onPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:paddingBottom">?attr/actionBarSize</item>
    </style>

    <style name="style_delivery_title">
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/string_delivery_title</item>
    </style>

    <style name="style_delivery_amount">
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:textSize">@dimen/text_delivery_ammount</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/string_delivery_amount</item>
    </style>
</resources>